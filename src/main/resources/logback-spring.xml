<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <!--專案名稱-->
    <contextName>design</contextName>
    <!--日誌路徑-->
    <property name="logHome" value="../design/logs"/>
    <!--專案名稱-->
    <property name="projectName" value="design"/>

    <appender name="FILE-ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logHome}/${projectName}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${logHome}/archived/${projectName}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <totalSizeCap>20GB</totalSizeCap>
            <maxHistory>120</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} %magenta([%thread]) %highlight(%-5level) %logger{36}.%M - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} %magenta([%thread]) %highlight(%-5level) %logger{36}.%M - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 預設 root，確保沒有 profile 也會輸出 log -->
    <root level="info">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE-ROLLING"/>
    </root>

    <!-- 額外針對 Spring Boot / Tomcat logger -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.apache.catalina" level="INFO"/>
    <logger name="org.apache.coyote" level="INFO"/>

    <!-- Profile: local -->
    <springProfile name="local">
        <root level="debug">
            <appender-ref ref="STDOUT"/>
            <appender-ref ref="FILE-ROLLING"/>
        </root>
    </springProfile>
</configuration>
